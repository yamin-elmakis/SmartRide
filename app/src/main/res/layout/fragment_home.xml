<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pendingRideLayout"

        android:background="@color/grey_50">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pending_user_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/pending_user_avatar"
            android:background="@drawable/primary_round">

        <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pending_user_score"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                layout="@layout/view_user_score"/>

        <TextView
                android:id="@+id/pendingHi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_white"
                android:layout_marginTop="25dp"
                android:layout_marginStart="56dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pending_user_score"/>

        <TextView
                android:id="@+id/pending_your_ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your ride is booked!"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/_white"
                app:layout_constraintStart_toStartOf="@id/pendingHi"
                app:layout_constraintTop_toBottomOf="@+id/pendingHi"/>

        <ImageView
                android:id="@+id/pendingArrowDown"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pending_your_ride"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
            android:id="@+id/pending_user_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_avatar_user1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/pending_start_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/pendingTimer"
            app:layout_constraintStart_toStartOf="@+id/pendingTimer"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:stateListAnimator="@animator/raise"
            android:clickable="true"
            android:focusable="true"
            android:text="The game will start in "/>

    <ImageView
            android:id="@+id/pendingStartInfo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:tint="@color/colorAccent"
            android:padding="4dp"
            app:layout_constraintStart_toEndOf="@+id/pending_start_in"
            app:layout_constraintTop_toTopOf="@id/pending_start_in"
            app:layout_constraintBottom_toBottomOf="@id/pending_start_in"
            android:src="@drawable/ic_info"/>

    <com.example.smartride.widgets.TimeCounterView
            android:id="@+id/pendingTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/pending_user_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:stateListAnimator="@animator/raise"
            android:clickable="true"
            android:focusable="true"
            android:text="00:00:00"/>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pendingLottieRoute"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pendingTimer"/>

    <TextView
            android:id="@+id/pending_your_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/pendingLottieRoute"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/blue_grey_100"
            android:text="YOUR DRIVER IS ON THE WAY!"/>

    <androidx.constraintlayout.widget.Placeholder
            android:id="@+id/pending_bottom_placeholder"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/pendingExplainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutDescription="@xml/scene_home">

        <View
                android:id="@+id/pendingExplanationBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <View
                android:id="@+id/pendingExplanationInfoBack"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pendingExplanationPlaceholder"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/_white"/>

        <androidx.constraintlayout.widget.Placeholder
                android:id="@+id/pendingExplanationPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/pendingExplanationInfo" />

        <ImageView
                android:id="@+id/pendingExplanationInfo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:tint="@color/colorAccent"
                android:layout_marginBottom="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/pending_explanation_info_title"
                android:src="@drawable/ic_info"/>

        <TextView
                android:id="@+id/pending_explanation_info_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="@dimen/trivia_margin_2"
                android:layout_marginEnd="@dimen/trivia_margin_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toTopOf="@+id/pending_explanation_info_text"
                android:text="Q-Rides is a free game where you can earn money"/>

        <TextView
                android:id="@+id/pending_explanation_info_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="@dimen/trivia_margin_2"
                android:layout_marginEnd="@dimen/trivia_margin_2"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/thank_you_for_riding_with_us"/>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
