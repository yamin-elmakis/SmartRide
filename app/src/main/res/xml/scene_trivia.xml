<?xml version="1.0" encoding="utf-8"?>
<MotionScene
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/triviaLayout">

    <Transition
            app:constraintSetStart="@+id/trivia_start"
            app:constraintSetEnd="@+id/trivia_answered"
            app:duration="300"
            app:motionInterpolator="linear">

        <ConstraintSet android:id="@+id/trivia_start">

            <Constraint
                    android:id="@id/triviaHalf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/triviaQuestion"
                    android:layout_marginEnd="@dimen/trivia_margin_2"
                    android:layout_marginTop="10dp"
                    android:visibility="visible">
            </Constraint>
            <Constraint
                    android:id="@id/triviaPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/trivia_margin_1"
                    app:layout_constraintEnd_toStartOf="@id/triviaHalf"
                    app:layout_constraintTop_toTopOf="@id/triviaHalf"
                    android:visibility="visible">
            </Constraint>
            <Constraint
                    android:id="@id/trivia_need_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/trivia_margin_2"
                    app:layout_constraintTop_toTopOf="@id/triviaHalf"
                    app:layout_constraintBottom_toBottomOf="@id/triviaHalf"
                    app:layout_constraintStart_toStartOf="parent"
                    android:visibility="visible">
            </Constraint>

        </ConstraintSet>

        <ConstraintSet android:id="@+id/trivia_answered">

            <Constraint
                    android:id="@id/triviaHalf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/trivia_margin_2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/triviaQuestion"
                    android:visibility="gone">
            </Constraint>
            <Constraint
                    android:id="@id/triviaPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/trivia_margin_1"
                    app:layout_constraintEnd_toStartOf="@id/triviaHalf"
                    app:layout_constraintTop_toTopOf="@id/triviaHalf"
                    android:visibility="gone">
            </Constraint>
            <Constraint
                    android:id="@id/trivia_need_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/trivia_margin_2"
                    app:layout_constraintTop_toTopOf="@id/triviaHalf"
                    app:layout_constraintBottom_toBottomOf="@id/triviaHalf"
                    app:layout_constraintStart_toStartOf="parent"
                    android:visibility="gone">
            </Constraint>


        </ConstraintSet>
    </Transition>
</MotionScene>